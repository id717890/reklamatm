@using Reklama.Models.ViewModels.Shared
@using System.Globalization
@model PriceCurrencyMainPageViewModel


<div>
    <div class="type">
        <span class="sale">@Model.SectionName</span>
        @if (Model.IsAuction)
        {<span class="auction">ТОРГ</span>}
    </div>
    @if (Model.Price.HasValue)
    {
        <div class="mPrice">
            <img class="mPriceL" src="/Images/System/mPriceL.png" />
            <img class="mPriceR" src="/Images/System/mPriceR.png" />
            <label class="price_value" value="@Model.Price.Value.ToString(CultureInfo.InvariantCulture)">@Math.Round(((decimal)Model.Currency.Rate * Model.Price.Value), 2).ToString("0.#####", CultureInfo.InvariantCulture)</label>
            <span class="price_list_click">
                <span>@Model.Currency.Name</span>

                @try { Html.RenderAction("SwitcherList", "Currency"); }
                catch { }
            </span>
        </div>
    }
</div>


@Scripts.Render("~/Scripts/CurrencyList.js")