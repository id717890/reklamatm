@model IEnumerable<Domain.Entity.Catalogs.Unit>

@{
    ViewBag.Title = "Единицы измерения";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h2>Unit</h2>

<p>
    @Html.ActionLink("Создать новую единицу измерения", "UnitCreate")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "UnitEdit", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "UnitDelete", new { id=item.Id })
        </td>
    </tr>
}

</table>
