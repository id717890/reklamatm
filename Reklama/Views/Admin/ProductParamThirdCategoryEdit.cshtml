@model Domain.Entity.Catalogs.CatalogThirdCategory

@{
    ViewBag.Title = "ProductParamThirdCategoryEdit";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h2>Редактирование производителя "@Model.Name"<br /> для раздела "@Model.SecondCategory.Name"</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>CatalogThirdCategory</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SecondCategoryId)
        </div>
        <div class="editor-field">
            @Html.DropDownList("SecondCategoryId", (SelectList)ViewBag.SecondCategories)
            @Html.ValidationMessageFor(model => model.SecondCategoryId)
        </div>

        @Html.HiddenFor(model => model.Id)

        <p>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
