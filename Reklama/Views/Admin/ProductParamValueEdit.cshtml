@model Domain.Entity.Catalogs.ProductParamValue

@{
    ViewBag.Title = "Укажите значение параметра";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h2>Изменение значения параметра</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>ProductParamValue</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Value)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Value)
            @Html.ValidationMessageFor(model => model.Value)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.UnitId)
        </div>
        <div class="editor-field">
            @Html.DropDownList("UnitId", (SelectList)ViewBag.Units)
            @Html.ValidationMessageFor(model => model.UnitId)
        </div>

        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.ProductId)
        @Html.HiddenFor(m => m.ParamId)
        @Html.HiddenFor(m => m.ParamSubsectionId)

        <p>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
